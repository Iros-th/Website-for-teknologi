  <script>
    const mainMenu = document.getElementById('main-menu');
    const store = document.getElementById('store');
    const bilagList = document.getElementById('bilag-list');
    const bilagDetail = document.getElementById('bilag-detail');
    const bilagTitle = document.getElementById('bilag-title');
    const bilagDescription = document.getElementById('bilag-description');

    document.getElementById('enter-store-btn').addEventListener('click', () => {
